@{
    ViewBag.Title = "Estudiantes";
}

<script defer src="@Url.Content("~/Scripts/System/Universidad/Estudiante.js")" type="text/javascript"></script>

<table class="contenedorContenido">

    <tr>
        <td>
            <h2>Estudiantes</h2>
        </td>
    </tr>
    <tr>
        <td><input id="txtId" type="hidden" /></td>
    </tr>

    <tr>
        <td>
            <table>
                <tr>
                    <td>
                        Numero de documento
                    </td>
                    <td>
                        <input type="text" id="txtDocumento" />
                    </td>
                    <td>
                        Nombres
                    </td>
                    <td>
                        <input type="text" id="txtNombre" />
                    </td>
                    <td>
                        Apellidos
                    </td>
                    <td>
                        <input type="text" id="txtApellido" />
                    </td>
                                 
                </tr>
                <tr>
                    <td>
                        Semestre
                    </td>
                    <td>
                        <input type="text" id="txtSemestre" />
                    </td>      
                    <td>
                        Departamento
                    </td>
                    <td>
                        <select id="selDepartamento" onchange="cargarMunicipio();">
                            <option value="-1">Seleccione</option>
                        </select>
                    </td>
                    <td>
                        Municipio
                    </td>
                    <td>
                        <select id="selMunicipio">
                            <option value="-1">Seleccione</option>
                        </select>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td>
            <br />
        </td>
    </tr>
    <tr>
        <td>
            <input type="button" value="guardar" onclick="guardar();" />
            <input type="button" value="buscar" onclick="buscar();" />
            <input type="button" value="modificar" onclick="guardar();" />
            <input type="button" value="eliminar" onclick="eliminar();" />
            <input type="button" value="limpiar" onclick="limpiar();" />
        </td>
    </tr>

    <tr>
        <td>
            <br />
        </td>
    </tr>

    <tr>
        <td colspan="4">
            <div id="listado"></div>
        </td>
    </tr>
</table>

